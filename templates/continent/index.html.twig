{% extends 'base.html.twig' %}

{% block title %}Continent index{% endblock %}

{% block body %}
    <h1>Continent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for continent in continents %}
            <tr>
                <td>{{ continent.id }}</td>
                <td>{{ continent.name }}</td>
                <td>{{ continent.image }}</td>
                <td>
                    <a href="{{ path('continent_show', {'id': continent.id}) }}">show</a>
                    <a href="{{ path('continent_edit', {'id': continent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('continent_new') }}">Create new</a>
{% endblock %}
